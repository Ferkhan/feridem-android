<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Feridem"
        tools:targetApi="31">
        <activity
            android:name=".user_interface.PantallazoActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user_interface.ActPerfilActivity"
            android:exported="false" />
        <activity
            android:name=".user_interface.FacturaActivity"
            android:exported="false" />
        <activity
            android:name=".user_interface.HabitacionDetallesActivity"
            android:exported="false" />
        <activity
            android:name=".user_interface.BarraNavegacionActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
        <activity
            android:name=".user_interface.RegistroActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user_interface.IniciarSesionActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <!-- Otros filtros de intenciÃ³n si es necesario -->
        </activity>
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
    </application>

</manifest>