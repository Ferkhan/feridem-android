<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/principal"
    tools:context=".RegistroActivity">

    <TextView
        android:id="@+id/encabezado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="FERIDEM"
        android:textColor="@color/texto"
        android:textSize="@dimen/feridem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/nombreCompleto"
        style="@style/textoInicioRegistro"
        android:layout_marginTop="30dp"
        android:text="Nombre completo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/encabezado" />

    <EditText
        android:id="@+id/ingresarNombreCompleto"
        style="@style/ingresoInicioRegistro"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Ingresa tu nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreCompleto" />


    <TextView
        android:id="@+id/correo"
        style="@style/textoInicioRegistro"
        android:layout_marginTop="20dp"
        android:text="Correo electrónico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingresarNombreCompleto" />

    <EditText
        android:id="@+id/ingresarCorreo"
        style="@style/ingresoInicioRegistro"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Ingresa tu correo"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correo" />


    <TextView
        android:id="@+id/numeroCelular"
        style="@style/textoInicioRegistro"
        android:layout_marginTop="10dp"
        android:text="Número de celular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingresarCorreo" />

    <EditText
        android:id="@+id/ingresarNumeroCelular"
        style="@style/ingresoInicioRegistro"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Ingresa tu celular"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numeroCelular" />


    <TextView
        android:id="@+id/contrasenia"
        style="@style/textoInicioRegistro"
        android:layout_marginTop="10dp"
        android:text="Contraseña"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingresarNumeroCelular" />

    <EditText
        android:id="@+id/ingresarContrasenia"
        style="@style/ingresoInicioRegistro"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Ingresa tu contraseña"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrasenia" />

    <TextView
        android:id="@+id/confirmarContrasenia"
        style="@style/textoInicioRegistro"
        android:layout_marginTop="10dp"
        android:text="Confirmar contraseña"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingresarContrasenia" />

    <EditText
        android:id="@+id/ingresarConfirmarContrasenia"
        style="@style/ingresoInicioRegistro"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Vuelve a ingresar tu contraseña"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmarContrasenia" />


    <Button
        android:id="@+id/botonRegistrarse"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/boton"
        android:text="Registrarte"
        android:textColor="@color/texto"
        android:textSize="@dimen/textoBoton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingresarConfirmarContrasenia" />

    <TextView
        android:id="@+id/noCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/inter"
        android:text="¿Ya tienes una cuenta?"
        android:textColor="@color/texto"
        android:textSize="@dimen/textoInicioRegistro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonRegistrarse"
        app:layout_constraintVertical_bias="0.151" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/principal"
        android:fontFamily="@font/inter_bold"
        android:text="Inicia Sesión"
        android:textColor="@color/texto"
        android:textSize="@dimen/textoInicioRegistro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noCuenta"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>